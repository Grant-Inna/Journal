mixin article_text( article, subject, title, type, name, about, text )
   .article__read( id='article_#{article}' )
      .article__subject !{subject}
      .article__theme !{title}
      .article__meta
         b.mr-05 Тип статьи:
         span #{type}
      .article__meta
         b.mr-05 Автор:
         span #{name}
      .article__author !{about}
      .article__text !{text}
